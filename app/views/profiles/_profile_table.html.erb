<tr class="group hover:bg-gradient-to-r hover:from-blue-50/30 hover:to-transparent transition-all duration-200">
  <td class="whitespace-nowrap py-5 pl-6 pr-3 text-sm">
    <div class="relative flex items-center gap-4">
      <div class="relative shrink-0">
        <%= image_tag(direct_blob_url(profile.avatar), 
          class: 'size-12 rounded-xl object-cover ring-2 ring-gray-200 group-hover:ring-blue-400 transition-all duration-300', 
          loading: 'lazy',
          decoding: 'async',
          alt: "#{profile.full_name} (@#{profile.username})"
        ) %>
        <% if profile.is_verified? %>
          <div class="absolute -bottom-1 -right-1 flex items-center justify-center w-5 h-5 bg-white rounded-full shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="#0095f6" class="w-4 h-4">
              <path fill-rule="evenodd" d="M16.403 12.652a3 3 0 0 0 0-5.304 3 3 0 0 0-3.75-3.751 3 3 0 0 0-5.305 0 3 3 0 0 0-3.751 3.75 3 3 0 0 0 0 5.305 3 3 0 0 0 3.75 3.751 3 3 0 0 0 5.305 0 3 3 0 0 0 3.751-3.75Zm-2.546-4.46a.75.75 0 0 0-1.214-.883l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="min-w-0 flex-1">
        <div class="font-semibold text-gray-900 truncate text-base"><%=profile.full_name%></div>
        <%=link_to profile_path(profile), class: 'text-sm text-gray-600 hover:text-blue-600 transition-colors inline-flex items-center gap-1.5 group/link mt-0.5' do%>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5">
            <path d="M12.232 4.232a2.5 2.5 0 0 1 3.536 3.536l-1.225 1.224a.75.75 0 0 0 1.061 1.06l1.224-1.224a4 4 0 0 0-5.656-5.656l-3 3a4 4 0 0 0 .225 5.865.75.75 0 0 0 .977-1.138 2.5 2.5 0 0 1-.142-3.667l3-3Z" />
            <path d="M11.603 7.963a.75.75 0 0 0-.977 1.138 2.5 2.5 0 0 1 .142 3.667l-3 3a2.5 2.5 0 0 1-3.536-3.536l1.225-1.224a.75.75 0 0 0-1.061-1.06l-1.224 1.224a4 4 0 1 0 5.656 5.656l3-3a4 4 0 0 0-.225-5.865Z" />
          </svg>
          <span class="truncate">@<%=profile.username%></span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3 opacity-0 -translate-x-1 group-hover/link:opacity-100 group-hover/link:translate-x-0 transition-all">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z" clip-rule="evenodd" />
          </svg>
        <%end%>
      </div>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-right <%= 'bg-gradient-to-r from-blue-50 to-blue-100/50' if defined?(highlight) && highlight == 'followers' %>">
    <div class="flex flex-col items-end gap-0.5">
      <span class="font-bold text-gray-900 <%= 'text-lg' if defined?(highlight) && highlight == 'followers' %>">
        <%= number_with_delimiter(profile.followers, delimiter: ".") %>
      </span>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-right <%= 'bg-gradient-to-r from-green-50 to-green-100/50' if defined?(highlight) && highlight == 'interactions' %>">
    <div class="flex flex-col items-end gap-0.5">
      <span class="font-bold text-gray-900 <%= 'text-lg' if defined?(highlight) && highlight == 'interactions' %>">
        <%= number_with_delimiter(profile.total_interactions_count, delimiter: ".") %>
      </span>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-right <%= 'bg-gradient-to-r from-purple-50 to-purple-100/50' if defined?(highlight) && highlight == 'videos' %>">
    <div class="flex flex-col items-end gap-0.5">
      <span class="font-bold text-gray-900 <%= 'text-lg' if defined?(highlight) && highlight == 'videos' %>">
        <%= number_with_delimiter(profile.total_video_view_count, delimiter: ".") %>
      </span>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-center">
    <% if profile.profile_type.present? %>
      <%= link_to category_show_path(profile.profile_type), class: 'inline-flex items-center gap-1.5 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600 px-3 py-1.5 text-xs font-semibold text-white shadow-sm hover:shadow-md hover:scale-105 transition-all duration-200' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5">
          <path fill-rule="evenodd" d="M2 3.75A.75.75 0 0 1 2.75 3h11.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 3.75ZM2 7.5a.75.75 0 0 1 .75-.75h6.365a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 7.5ZM14 7a.75.75 0 0 1 .55.24l3.25 3.5a.75.75 0 0 1 0 1.02l-3.25 3.5a.75.75 0 0 1-1.1-1.02l2.77-2.99-2.77-2.99A.75.75 0 0 1 14 7ZM2 11.25a.75.75 0 0 1 .75-.75h4.562a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
        </svg>
        <%= profile.profile_type.capitalize %>
      <% end %>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm">
    <div class="flex flex-wrap gap-1.5">
      <% profile.tags.each do |tag| %>
        <%= link_to tag_path(tag), class: 'inline-flex items-center rounded-lg bg-gradient-to-r from-emerald-500 to-green-600 px-2.5 py-1 text-xs font-medium text-white shadow-sm hover:shadow-md hover:scale-105 transition-all duration-200' do %>
          <span class="mr-1">üè∑Ô∏è</span>
          <%= tag.name %>
        <% end %>
      <% end %>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-center">
    <% if profile.is_verified? %>
      <div class="inline-flex items-center gap-1.5 rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 px-3 py-1.5 shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-white">
          <path fill-rule="evenodd" d="M16.403 12.652a3 3 0 0 0 0-5.304 3 3 0 0 0-3.75-3.751 3 3 0 0 0-5.305 0 3 3 0 0 0-3.751 3.75 3 3 0 0 0 0 5.305 3 3 0 0 0 3.75 3.751 3 3 0 0 0 5.305 0 3 3 0 0 0 3.751-3.75Zm-2.546-4.46a.75.75 0 0 0-1.214-.883l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" />
        </svg>
        <span class="text-xs font-bold text-white">Verificada</span>
      </div>
    <% else %>
      <div class="inline-flex items-center gap-1.5 rounded-lg bg-gray-100 px-3 py-1.5">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-gray-400">
          <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
        </svg>
        <span class="text-xs font-medium text-gray-500">No</span>
      </div>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-center">
    <% if profile.is_business_account? %>
      <div class="inline-flex items-center gap-1.5 rounded-lg bg-gradient-to-r from-indigo-500 to-purple-600 px-3 py-1.5 shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-white">
          <path fill-rule="evenodd" d="M6 3.75A2.75 2.75 0 0 1 8.75 1h2.5A2.75 2.75 0 0 1 14 3.75v.443c.572.055 1.14.122 1.706.2C17.053 4.582 18 5.75 18 7.07v3.469c0 1.126-.694 2.191-1.83 2.54-1.952.599-4.024.921-6.17.921s-4.219-.322-6.17-.921C2.694 12.73 2 11.665 2 10.539V7.07c0-1.321.947-2.489 2.294-2.676A41.047 41.047 0 0 1 6 4.193V3.75Zm6.5 0v.325a41.622 41.622 0 0 0-5 0V3.75c0-.69.56-1.25 1.25-1.25h2.5c.69 0 1.25.56 1.25 1.25ZM10 10a1 1 0 0 0-1 1v.01a1 1 0 0 0 1 1h.01a1 1 0 0 0 1-1V11a1 1 0 0 0-1-1H10Z" clip-rule="evenodd" />
          <path d="M3 15.055v-.684c.126.053.255.1.39.142 2.092.642 4.313.987 6.61.987 2.297 0 4.518-.345 6.61-.987.135-.041.264-.089.39-.142v.684c0 1.347-.985 2.53-2.363 2.686a41.454 41.454 0 0 1-9.274 0C3.985 17.585 3 16.402 3 15.055Z" />
        </svg>
        <span class="text-xs font-bold text-white">Business</span>
      </div>
    <% else %>
      <div class="inline-flex items-center gap-1.5 rounded-lg bg-gray-100 px-3 py-1.5">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-gray-400">
          <path d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
        </svg>
        <span class="text-xs font-medium text-gray-500">Personal</span>
      </div>
    <% end %>
  </td>
</tr>