<tr>
  <td class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0">
    <div class="group relative flex items-center">
      <div class="size-11 shrink-0">
        <%= image_tag(direct_blob_url(profile.avatar), class: 'size-11 rounded-full', loading: 'lazy', alt: profile.username) %>
      </div>
      <div class="ml-4">
        <div class="font-medium text-gray-900"><%=profile.full_name%></div>
        <%=link_to profile_path(profile) do%>
          <span aria-hidden="true" class="absolute inset-0"></span>
          <%=profile.username%>
        <%end%>
      </div>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-right <%= 'bg-yellow-50' if defined?(highlight) && highlight == 'followers' %>">
    <div class="text-gray-900 <%= 'text-lg font-bold' if defined?(highlight) && highlight == 'followers' %>"><%= number_with_delimiter(profile.followers, delimiter: ".") %></div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-right <%= 'bg-yellow-50' if defined?(highlight) && highlight == 'interactions' %>">
    <div class="text-gray-900 <%= 'text-lg font-bold' if defined?(highlight) && highlight == 'interactions' %>"><%= number_with_delimiter(profile.total_interactions_count, delimiter: ".") %></div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-right <%= 'bg-yellow-50' if defined?(highlight) && highlight == 'videos' %>">
    <div class="text-gray-900 <%= 'text-lg font-bold' if defined?(highlight) && highlight == 'videos' %>"><%= number_with_delimiter(profile.total_video_view_count, delimiter: ".") %></div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-center">
    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
      <% if profile.profile_type.present? %>
      <%= link_to profile.profile_type&.capitalize, category_show_path(profile.profile_type) %>
      <% end %>
    </span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <% profile.tags.each do |tag| %>
      <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
        <%= link_to tag.name, tag_path(tag) %>
      </span>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-center">
    <% if profile.is_verified? %>
      <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
        <%= link_to "Sí", profile_path(profile) %>
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
        <%= link_to "No", profile_path(profile) %>
      </span>
    <% end %>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500 text-center">
    <% if profile.is_business_account? %>
      <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
        Sí
      </span>
    <% else %>
      <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/20">
        No
      </span>
    <% end %>
  </td>
</tr>