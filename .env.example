# ====================================
# Instagram API Configuration
# ====================================
# Get your token from https://scrape.do
SCRAPE_DO_TOKEN=your_scrape_do_token_here
INSTAGRAM_APP_ID=936619743392459
INSTAGRAM_API_TIMEOUT=60

# Optional: Enable API call logging for debugging
# Recommended: false in production, true in development
# LOG_INSTAGRAM_API_CALLS=true

# Optional: Adjust rate limiting (requests per minute)
# INSTAGRAM_RATE_LIMIT=30

# Optional: Adjust retry configuration
# INSTAGRAM_MAX_RETRIES=3
# INSTAGRAM_RETRY_DELAY=2

# ====================================
# OpenAI Configuration (if using AI services)
# ====================================
# OPENAI_API_KEY=your_openai_key_here

# ====================================
# Database Configuration
# ====================================
# Production database URL (if not using database.yml)
# DATABASE_URL=mysql2://user:password@localhost/influencers_production

# ====================================
# Rails Configuration
# ====================================
# RAILS_ENV=production
# RAILS_MAX_THREADS=5
# RAILS_SERVE_STATIC_FILES=true
# RAILS_LOG_TO_STDOUT=true

# ====================================
# Secret Keys (REQUIRED in production)
# ====================================
# Generate with: rails secret
# SECRET_KEY_BASE=your_secret_key_base_here
